<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend BoM to set default SCADA equipment -->
    <record id="view_mrp_bom_form_scada_equipment" model="ir.ui.view">
        <field name="name">mrp.bom.form.scada.equipment</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="scada_equipment_id"/>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']//tree//field[@name='product_id']" position="after">
                <field name="scada_equipment_id"/>
            </xpath>
        </field>
    </record>

    <!-- Extend MO to allow overriding SCADA equipment -->
    <record id="view_mrp_production_form_scada_equipment" model="ir.ui.view">
        <field name="name">mrp.production.form.scada.equipment</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="scada_equipment_id"/>
            </xpath>
            <xpath expr="//field[@name='move_raw_ids']//tree//field[@name='product_id']" position="after">
                <field name="scada_equipment_id"/>
            </xpath>
        </field>
    </record>
</odoo>
