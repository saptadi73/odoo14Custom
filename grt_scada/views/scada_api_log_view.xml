<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SCADA API Log Views -->

    <!-- List view -->
    <record id="view_scada_api_log_list" model="ir.ui.view">
        <field name="name">scada.api.log.list</field>
        <field name="model">scada.api.log</field>
        <field name="arch" type="xml">
            <tree string="API Logs" decoration-danger="status == 'error'" decoration-warning="status == 'failed'">
                <field name="timestamp"/>
                <field name="method" widget="badge"/>
                <field name="endpoint"/>
                <field name="equipment_id"/>
                <field name="http_status_code"/>
                <field name="response_time_ms"/>
                <field name="status" widget="badge" decoration-success="status == 'success'" decoration-danger="status == 'error'"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_scada_api_log_form" model="ir.ui.view">
        <field name="name">scada.api.log.form</field>
        <field name="model">scada.api.log</field>
        <field name="arch" type="xml">
            <form string="API Log">
                <sheet>
                    <group>
                        <group string="Request Information">
                            <field name="timestamp" readonly="1"/>
                            <field name="method" readonly="1"/>
                            <field name="endpoint" readonly="1"/>
                            <field name="request_id" readonly="1"/>
                        </group>
                        <group string="Response Status">
                            <field name="http_status_code" readonly="1"/>
                            <field name="status" readonly="1"/>
                            <field name="response_time_ms" readonly="1"/>
                        </group>
                    </group>
                    <group string="Equipment">
                        <field name="equipment_id" readonly="1"/>
                        <field name="source_ip" readonly="1"/>
                    </group>
                    <group string="Request Data">
                        <field name="request_data" nolabel="1" widget="code" options="{'lineWraps': True}"/>
                    </group>
                    <group string="Response Data">
                        <field name="response_data" nolabel="1" widget="code" options="{'lineWraps': True}"/>
                    </group>
                    <group string="Error Information">
                        <field name="error_message" nolabel="1"/>
                    </group>
                    <group string="Additional Info">
                        <field name="user_agent" readonly="1"/>
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_scada_api_log_search" model="ir.ui.view">
        <field name="name">scada.api.log.search</field>
        <field name="model">scada.api.log</field>
        <field name="arch" type="xml">
            <search string="Search API Logs">
                <field name="endpoint"/>
                <field name="equipment_id"/>
                <field name="request_id"/>
                <filter name="today" string="Today" domain="[('timestamp', '&gt;=', context_today())]"/>
                <filter name="success" string="Success" domain="[('status', '=', 'success')]"/>
                <filter name="error" string="Error" domain="[('status', 'in', ['error', 'failed', 'timeout'])]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Endpoint" name="group_by_endpoint" context="{'group_by': 'endpoint'}"/>
                    <filter string="Equipment" name="group_by_equipment" context="{'group_by': 'equipment_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Method" name="group_by_method" context="{'group_by': 'method'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_scada_api_log" model="ir.actions.act_window">
        <field name="name">API Logs</field>
        <field name="res_model">scada.api.log</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
